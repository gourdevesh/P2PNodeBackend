{
  "$schema": "https://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,

    "module": "NodeNext",
    "target": "ESNext",

    "rootDir": "./src",
    "outDir": "./dist",

    "types": ["node"],
    "skipLibCheck": true
  },

  "include": ["src/**/*.js"],
  "exclude": ["node_modules", "dist"]
}
